#!/usr/bin/env ruby
require "secret_store"
require "irb"

extend SecretStore

secrets_file = ARGV.first || default_secrets_file

puts "Connecting to #{secrets_file}."

connect_secret_store( secrets_file )
help!

# Actually this could be a bad idea unless we can reliably not add to command history from this
# IRB session.
IRB.start
